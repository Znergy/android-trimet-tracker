<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doomcat.trimettrackerclone.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Trimet Tracker"
        android:textSize="30sp"
        android:layout_marginStart="23dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="You can find stops using the buttons above, or type it in below if you know the stop ID."
        android:textSize="20sp"
        tools:layout_editor_absoluteY="77dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="361dp"
        android:layout_height="61dp"
        android:text="As you visit stops, they will show up here for quick access."
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="357dp"
        android:layout_height="52dp"
        android:text="Thank you for using my app!"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etStopId"
        android:layout_width="293dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Enter Stop ID"
        android:inputType="textPersonName"
        android:textSize="15sp"
        tools:layout_editor_absoluteY="540dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        tools:layout_editor_absoluteY="539dp"
        tools:layout_editor_absoluteX="309dp" />

</android.support.constraint.ConstraintLayout>
